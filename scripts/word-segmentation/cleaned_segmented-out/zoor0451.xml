                    <msContents>
                        <textLang mainLang="arc" otherLangs="he"/>
                        <msItem class="#funerary.epitaph" ana="#jewish">
                            <p>Zoora, Mid-fifth century CE. Tombstone. Funerary (Epitaph).</p>
                        </msItem>
                    </msContents>
                    <!--  *************************************  <physDesc>  ********************************* -->
                    <physDesc>
                        <objectDesc ana="#tombstone">
                            <supportDesc ana="#stone.other">
                                <support>
                                    <p>Yellow sandstone, rectangular in shape</p>
                                    <dimensions type="surface" unit="cm">
                                        <height>33</height>
                                        <width>21.5</width>
                                        <depth>7</depth>
                                    </dimensions>
                                </support>
                                <condition ana="#complete.broken">
                                    <p>Broken at the upper left corner and chipped all around. The
                                        front surface is heavily eroded and covered with salt
                                        crystals on the right and lower sides</p>
                                </condition>
                            </supportDesc>
                            <layoutDesc>
                                <layout columns="1" writtenLines="8">
                                    <p/>
                                </layout>
                            </layoutDesc>
                        </objectDesc>
                        <!--  *************************************  <handDesc>  *********************************  -->
                        <handDesc>
                            <handNote ana="#impressed.inscribed">
                                <p/>
                                <dimensions type="letter" extent="height" unit="cm" atLeast="0.7" atMost="1"/>
                            </handNote>
                        </handDesc>
                        <!--  *************************************  <decoDesc>  *********************************  -->
                        <decoDesc>
                            <decoNote>
                                <ab>Linear frame ornamented with dotted zigzag pattern, double on
                                    left side</ab>
                                <locus>Surrounding the inscription</locus>
                            </decoNote>
                            <decoNote>
                                <ab>Seven-branched candelabrum</ab>
                                <locus>Below the inscription, in the center</locus>
                            </decoNote>
                            <decoNote>
                                <ab>Ram's horn</ab>
                                <locus>Below the inscription, to the left side of the seven-branched
                                    candelabrum</locus>
                            </decoNote>
                            <decoNote>
                                <ab>Ark of the Covenant</ab>
                                <locus>Below the inscription, to the left side of the seven-branched
                                    candelabrum</locus>
                            </decoNote>
                            <decoNote>
                                <ab>Lulav</ab>
                                <locus>Below the inscription, to the right side of the seven-branched
                                    candelabrum</locus>
                            </decoNote>
                            <decoNote>
                                <ab>Citron</ab>
                                <locus>Below the inscription to the right side of the seven-branched
                                    candelabrum</locus>
                            </decoNote>
                        </decoDesc>
                    </physDesc>
