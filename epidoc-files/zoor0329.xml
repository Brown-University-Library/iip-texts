               <!-- ********* <physDesc> ********* -->
               <physDesc><!-- ********* <objectDesc> ********* -->
                  <objectDesc ana="#tombstone">
                     <supportDesc ana="#stone.other">
                        <support>
                           <p>Yellowish sandstone</p>
                           <dimensions type="surface" unit="cm">
                              <height>42</height>
                              <width>24.5</width>
                              <depth>8</depth>
                           </dimensions>
                        </support>
                        <condition ana="#complete.broken">
                           <p>Rectangular in shape, chipped at the top and along the right side. The
                              front surface, nicely smoothed, is weathered at places, flaked off at
                              the lower left corner and scratched especially above and below the
                              text.</p>
                        </condition>
                     </supportDesc>
                     <!-- ********* <layoutDesc> ********* -->
                     <layoutDesc>
                        <layout columns="1" writtenLines="8">
                           <p>The text is set between double guide-lines: the incision is so
                              shallow, however, that they are barely visible. </p>
                        </layout>
                     </layoutDesc>
                  </objectDesc>
