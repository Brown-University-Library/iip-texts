            <div type="edition" subtype="transcription" ana="b1">
                <p xml:lang="heb">זכורין לטובה ולב<supplied reason="lost">רכה</supplied>
                    <gap reason="lost" extent="unknown" unit="character"/>
                    <lb/>שהחזיקו ועשו <supplied reason="lost">את</supplied>
