                    <!--  *************************************  <physDesc>  ********************************* -->
                    <physDesc>
                        <objectDesc ana="#column">
                            <supportDesc ana="#marble">
                                <support>
                                    <dimensions type="surface" unit="cm">
                                        <height>146</height>
                                        <width>51</width>
                                        <depth/>
                                    </dimensions>
                                </support>
                                <condition ana="#complete.broken">
                                    <p>Roughly cut at one end and broken at the other. It cannot be
                                        determined whether this milestone had a base. The upper end
                                        of the column seems to have been leveled intentionally</p>
                                </condition>
                            </supportDesc>
                            <layoutDesc>
                                <layout columns="1" writtenLines="12">
                                    <p>Carved with the column turned upside down (and probably after
                                        the base was broken off), it covers almost the full length
                                        of the column</p>
                                </layout>
                            </layoutDesc>
                        </objectDesc>
